<h1>Movie Name: <%= @movie.title  %></h1>
<h2>Creation Year: <%= @movie.creation_year  %></h2>
<h2>Genre: <%= @movie.genre  %></h2>
<h3>Actors:</h3>
  <% @sorted_movie_actors.each do |actor| %>
    <ul>
      <li>Name: <%= actor.name %>; Age: <%= actor.age %></li>
    </ul>
  <% end %>
<h4>Average Age: <%= @movie.actors_average_age.round(2) %></h4>
<h5>Add Actors</h5>
<%= form_with url: "/movies/#{@movie.id}", method: :post, local: true do |f| %>
  <%= f.label :actor_id %>
  <%= f.number_field :actor_id %>
  <br>
  <%= f.hidden_field :movie_id, value: @movie.id %>
  <br>
  <%= f.submit "Submit" %>
<% end %>